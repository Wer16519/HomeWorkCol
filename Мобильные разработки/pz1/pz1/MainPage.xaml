<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pz1.MainPage"
             Title="Авторизация">

    <Grid RowSpacing="0" ColumnSpacing="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Text="Авторизация"
               Grid.Row="0"
               Grid.Column="1"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,30"/>

        <Label Text="Логин"
               Grid.Row="1"
               Grid.Column="1"
               FontSize="16"
               HorizontalTextAlignment="Start"/>

        <Entry x:Name="LoginEntry"
               Grid.Row="2"
               Grid.Column="1"
               Placeholder="Логин"
               FontSize="16"
               HeightRequest="40"
               WidthRequest="290"/>

        <Label Text="Пароль"
               Grid.Row="3"
               Grid.Column="1"
               FontSize="16"
               HorizontalTextAlignment="Start"
               Margin="0,20,0,5"/>

        <Grid Grid.Row="4"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Entry x:Name="PasswordEntry"
                   Grid.Column="0"
                   Placeholder="Пароль"
                   IsPassword="True"
                   FontSize="16"
                   HeightRequest="40"
                   WidthRequest="250"/>

            <Button Text="#"
                    Grid.Column="1"
                    WidthRequest="40"
                    HeightRequest="40"
                    BorderColor="Black"
                    BorderWidth="1"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    CornerRadius="5"
                    Margin="5,0,0,0"
                    Clicked="OnTogglePasswordVisibility"/>
        </Grid>

        <Button Text="Вход"
                Grid.Row="5"
                Grid.Column="1"
                BackgroundColor="Transparent"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="1"
                FontSize="18"
                HeightRequest="50"
                WidthRequest="250"
                Margin="0,20,0,0"
                CornerRadius="10"
                Clicked="OnLoginClicked"/>

        <Button Text="Зарегистрироваться"
                Grid.Row="7"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                BackgroundColor="Transparent"
                TextColor="Black"
                FontSize="16"
                HeightRequest="40"
                Margin="0,10,0,0"
                Clicked="OnGoToRegistration"/>
    </Grid>

</ContentPage>